---
interface Props {
  title: string;
  description: string;
  tags: string[];
  image: string;
  href: string;
  featured?: boolean;
  spanFeatured?: boolean;
  showStar?: boolean;
}

const { title, description, tags, image, href, featured = false, spanFeatured = false, showStar = false } = Astro.props;
---

<article
  class:list={[
    'group relative rounded-2xl bg-zinc-900/80 overflow-hidden border border-zinc-800/50 card-glow',
    featured && spanFeatured && 'md:col-span-2',
  ]}
>
  <a href={href} class="block">
    <div class="aspect-video overflow-hidden bg-zinc-800 relative">
      <img
        src={image}
        alt={title}
        class="w-full h-full object-cover transition-all duration-500 group-hover:scale-105"
        loading="lazy"
        decoding="async"
      />
      <!-- Hover overlay gradient -->
      <div class="absolute inset-0 bg-gradient-to-t from-zinc-900/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
    </div>
    <div class="p-6">
      <h3 class="text-xl font-semibold text-zinc-100 group-hover:text-crimson-400 transition-colors duration-300 flex items-center gap-2">
        {title}
        {featured && showStar && (
          <svg class="w-4 h-4 text-amber-400 flex-shrink-0 animate-pulse" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
        )}
      </h3>
      <p class="mt-2 text-zinc-400 line-clamp-2">{description}</p>
      <div class="mt-4 flex flex-wrap gap-2">
        {tags.slice(0, 4).map((tag) => (
          <span class="px-3 py-1 text-xs font-medium bg-zinc-800/80 text-zinc-300 rounded-full border border-zinc-700/50 transition-all duration-300 group-hover:border-crimson-500/30">
            {tag}
          </span>
        ))}
      </div>
    </div>
  </a>
</article>
