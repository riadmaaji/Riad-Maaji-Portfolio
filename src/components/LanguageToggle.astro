---
import { languages, getAlternateLocale, getLocalizedPath, type Language } from '../i18n';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const alternateLang = getAlternateLocale(lang);
const currentPath = Astro.url.pathname;
const alternatePath = getLocalizedPath(currentPath, alternateLang);
---

<a
  href={alternatePath}
  class="flex items-center gap-2 px-3 py-1.5 rounded-lg text-sm font-medium text-zinc-400 hover:text-zinc-100 hover:bg-zinc-800 transition-colors"
  aria-label={`Switch to ${languages[alternateLang]}`}
>
  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" />
  </svg>
  <span class="uppercase">{alternateLang}</span>
</a>
