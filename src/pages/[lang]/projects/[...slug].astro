---
import { getCollection, render } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import ImageGallery from '../../../components/ImageGallery.astro';
import { languages, useTranslations, type Language } from '../../../i18n';

export async function getStaticPaths() {
  const paths = [];
  
  for (const lang of Object.keys(languages)) {
    const projects = await getCollection('projects', ({ id }) => id.startsWith(`${lang}/`));
    
    for (const project of projects) {
      paths.push({
        params: { 
          lang, 
          slug: project.id.replace(`${lang}/`, '').replace(/\.md$/, '')
        },
        props: { project, lang },
      });
    }
  }
  
  return paths;
}

const { project, lang } = Astro.props;
const t = useTranslations(lang as Language);
const { Content } = await render(project);
---

<BaseLayout title={project.data.title} description={project.data.description} lang={lang as Language}>
  <article class="px-6 py-20">
    <div class="max-w-3xl mx-auto">
      <!-- Header -->
      <header class="mb-12">
        <a
          href={`/${lang}/projects`}
          class="inline-flex items-center gap-2 text-sm text-zinc-400 hover:text-crimson-400 transition-all duration-300 mb-6 group"
        >
          <svg class="w-4 h-4 transition-transform duration-300 group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          {t('projects.backToProjects')}
        </a>

        <h1 class="text-4xl font-bold text-zinc-100 animate-fade-in-up animate-on-load" style="animation-fill-mode: forwards;">{project.data.title}</h1>
        <p class="mt-4 text-xl text-zinc-400 animate-fade-in-up animate-on-load delay-100" style="animation-fill-mode: forwards;">{project.data.description}</p>

        <div class="mt-6 flex flex-wrap gap-2 animate-fade-in-up animate-on-load delay-200" style="animation-fill-mode: forwards;">
          {project.data.tags.map((tag: string) => (
            <span class="px-3 py-1 text-sm bg-zinc-800/80 text-zinc-300 rounded-full border border-zinc-700/50 hover:border-crimson-500/30 transition-colors duration-300">
              {tag}
            </span>
          ))}
        </div>

        <div class="mt-6 flex gap-4 animate-fade-in-up animate-on-load delay-300" style="animation-fill-mode: forwards;">
          {project.data.github && (
            <a
              href={project.data.github}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 text-crimson-400 hover:text-crimson-300 transition-all duration-300 hover-underline"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              {t('projects.viewSource')}
            </a>
          )}
          {project.data.live && (
            <a
              href={project.data.live}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 text-crimson-400 hover:text-crimson-300 transition-all duration-300 hover-underline"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
              {t('projects.liveDemo')}
            </a>
          )}
        </div>
      </header>

      <!-- Image Gallery -->
      <div class="animate-fade-in-up animate-on-load delay-400" style="animation-fill-mode: forwards;">
        <ImageGallery images={project.data.images} alt={project.data.title} />
      </div>

      <!-- Content -->
      <div class="prose prose-lg max-w-none animate-fade-in-up animate-on-load delay-500" style="animation-fill-mode: forwards;">
        <Content />
      </div>
    </div>
  </article>
</BaseLayout>
